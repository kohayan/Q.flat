<% if current_user != user %>
	<% if current_user.following?(user) %>
		<%= link_to 'フォロー中', user_relationships_path(user.id), method: :delete, class: "btn btn-outline-warning rounded-pill", remote: true %>
	<% else %>
		<%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class: "btn btn-warning rounded-pill", remote: true %>
	<% end %>
<% end %>

<%= link_to user_follows_path(user) do %>
	<span>フォロー</span> <%= user.follower.count %>
<% end %>
<%= link_to user_followers_path(user) do %>
	<span>フォロワー</span> <%= user.followed.count %>
<% end %>
<div class="offset-1 col-md-10 mt-4">	
	<div class="profile text-center">
		<% if @user == current_user %>
			<%= link_to edit_user_path(@user) do %>
				<i class="fas fa-cog"></i>
			<% end %>
		<% end %>
		<%= attachment_image_tag @user, :image, size: "60x60", format: 'jpeg', class: "rounded-circle", fallback: "sozai_cman_jp_20200510165455.jpg" %>
		<h3 class="strong"><%= @user.nick_name %></h3>
		<p><%= @user.introduction %></p>
		<div>
			<% if current_user != @user %>
				<% if current_user.following?(@user) %>
					<%= link_to 'フォロー外す', user_relationships_path(@user.id), method: :delete, class: "btn btn-primary" %>
				<% else %>
					<%= link_to 'フォローする', user_relationships_path(@user.id), method: :POST, class: "btn btn-success" %>
				<% end %>
			<% end %>
		</div>
		<div>
			<%= link_to user_follows_path(@user) do %>
				<span>フォロー</span><%= @user.follower.count %>
			<% end %>
			<%= link_to user_followers_path(@user) do %>
				<span>フォロワー</span><%= @user.followed.count %>
			<% end %>
		</div>
		<% if @user.following?(current_user) %>
			<p>フォローされています</p>
		<% end %>
	</div>

	<div class="user-tab-wrap">
		<ul id="tab-menu" class="clearfix">
			<li><a href="#tab1" class="active">投稿</a></li>
			<li><a href="#tab2" class="">お気に入り</a></li>
		</ul>

		<div id="tab-contents" class="clearfix">
			<div id="tab1" class="tab">
				<% @user.quizzes.each do |quiz| %>
					<div class="quiz_<%= quiz.id %>">
						<%= render 'quizzes/quiz', quiz: quiz %>
					</div>
				<% end %>
			</div>
			<div id="tab2" class="tab">
				<% @user.favorite_quizzes.each do |quiz| %>
					<div class="quiz_<%= quiz.id %>">
						<%= render 'quizzes/quiz', quiz: quiz %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
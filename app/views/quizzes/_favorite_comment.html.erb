<% if user_signed_in? %>
	<!-- お気に入り -->
	<% if quiz.favorited_by?(current_user) %>
		<%= link_to quiz_favorites_path(quiz), method: :delete, remote: true do %>
			<i class="fas fa-star"></i>
		<% end %>
		<%= quiz.favorites.count %>
	<% else %>
		<%= link_to quiz_favorites_path(quiz), method: :post, remote: true do %>
			<i class="far fa-star"></i>
		<% end %>
		<%= quiz.favorites.count %>
	<% end %>
	<!-- コメント -->
	<i class="far fa-comment-alt ml-1"></i>
	<span class="comment-count">
		<%= quiz.quiz_comments.count %>
	</span>

<% else %>
	<!-- お気に入り -->
	<%= link_to quiz_favorites_path(quiz), method: :post do %>
		<i class="far fa-star"></i>
	<% end %>
	<%= quiz.favorites.count %>
	<!-- コメント -->
	<i class="far fa-comment-alt ml-1"></i>
	<span class="comment-count">
		<%= quiz.quiz_comments.count %>
	</span>

<% end %>
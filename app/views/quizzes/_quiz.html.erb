<div class="quiz-box">
	<div class="quiz-user">
		<%= link_to user_path(quiz.user), class: "quiz-user-link" do %>
			<%= attachment_image_tag quiz.user, :image, size: "40x40", format: 'jpeg', class: "rounded-circle", fallback: "sozai_cman_jp_20200510165455.jpg" %>
			<%= quiz.user.nick_name %>
		<% end %>
	</div>
	<% unless quiz.category.nil? %>
		<%= link_to quiz.category, quizzes_path(category: quiz.category), class: "quiz-category" %>
	<% end %>
	<%= link_to quiz_path(quiz) do %>
		<div>
			<h4>問題</h4>
			<%= quiz.question %>
		</div>
	<% end %>
	<div class="favorite-comment">
		<% if quiz.favorited_by?(current_user) %>
			<%= link_to quiz_favorites_path(quiz), method: :delete, remote: true do %>
				<i class="fas fa-star"></i>
			<% end %>
			<%= quiz.favorites.count %>
		<% else %>
			<%= link_to quiz_favorites_path(quiz), method: :post, remote: true do %>
				<i class="far fa-star"></i>
			<% end %>
			<%= quiz.favorites.count %>
		<% end %>
		<i class="far fa-comment-alt"></i>
		<span class="comment-count">
			<%= quiz.quiz_comments.count %>
		</span>
	</div>
</div>

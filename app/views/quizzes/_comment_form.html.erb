<% if user_signed_in? %>
	<div id="comment-form">
		<div class="close-comment-form">
			<i class="fa fa-2x fa-times"></i>
		</div>

		<%= form_with model:[quiz, comment] do |f| %>
			<div class="cnt_area"><span class="now_cnt">0</span> / 140</div>
			<%= f.text_area :comment, class: "comment-area", placeholder: "このクイズめっちゃおもしろい！" %>
			<%= f.submit 'コメントする', class: "comment-send btn btn-warning" %>
		<% end %>
	</div>
<% else %>
	<div class="please-signin">
		<div class="close-comment-form">
			<i class="fa fa-2x fa-times"></i>
		</div>

		<h3 class="mb-4">ログインしてコメントしよう！</h3>
		<%= link_to 'ログインはこちら!', new_user_session_path, class: "btn btn-outline-warning" %>
		<%= link_to '新規登録はこちら!', new_user_registration_path, class: "btn btn-outline-primary" %>
	</div>
<% end %>

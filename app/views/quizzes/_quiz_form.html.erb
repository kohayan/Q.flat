<div class="quiz-form-wrapper">
  <div class="quiz-form">
    <div class="close-quiz-form">
      <i class="fa fa-2x fa-times"></i>
    </div>
    <%= form_for new_quiz do |f| %>
      <div>
        <%= f.label :category %>
        <%= f.select :category, Quiz.categories.keys.to_a, {include_blank: "--選択してください--"} %>
      <div>
        <div class="question_cnt_area"><span class="question_now_cnt">0</span> / 500</div>
        <%= f.label :question %>
        <%= f.text_area :question, class: "question-area" %>
      </div>
      <div>
        <div class="answer_cnt_area"><span class="answer_now_cnt">0</span> / 200</div>
        <%= f.label :answer %>
        <%= f.text_field :answer, class: "answer-area" %>
      </div>
      <div>
        <div class="explanation_cnt_area"><span class="explanation_now_cnt">0</span> / 500</div>
        <%= f.label :explanation %>
        <%= f.text_area :explanation, class: "explanation-area" %>
      </div>
      <%= f.submit '投稿', class: "btn btn-primary quiz-send" %>
    <% end %>
  </div>
</div>
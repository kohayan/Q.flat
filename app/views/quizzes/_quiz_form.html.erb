<div class="quiz-form-wrapper">
  <div class="quiz-form">
    <div class="close-quiz-form">
      <i class="fa fa-2x fa-times"></i>
    </div>
    <%= form_for new_quiz do |f| %>
      <%= render 'layouts/errors', obj: new_quiz %>
      <div>
        <%= f.label :question %>
        <%= f.text_area :question %>
      </div>
      <div>
        <%= f.label :answer %>
        <%= f.text_field :answer %>
      </div>
      <div>
        <%= f.label :explanation %>
        <%= f.text_area :explanation %>
      </div>
      <%= f.submit '投稿', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<div id="sideber">
	<% if user_signed_in? %>
		<!-- ログインユーザ -->
		<div class="current-user">
			<div>
				<%= link_to user_path(current_user), class: "user-link" do %>
					<%= attachment_image_tag current_user, :image, size: "40x40", format: 'jpeg', class: "rounded-circle", fallback: "sozai_cman_jp_20200510165455.jpg" %>
					<strong><%= current_user.nick_name %></strong>
				<% end %>
			</div>
			<!-- 通知 -->
			<div class="notification_<%= current_user.id %>">
				<%= render 'layouts/mark_notification' %>
			</div>
		</div>
		<!-- 検索バー -->
		<div class="search-ber">
			<%= form_tag(search_path, :method => "get") do %>
				<div class="input-group">
					<%= text_field_tag :keyword %>
					<%= button_tag :type => "submit" do %>
						<i class="fa fa-search"></i>
					<% end %>
				</div>
			<% end %>
		</div>

		<!-- サイドバーのメニュー -->
		<ul class="sideber-nuv">
			<li>
				<h3><%= link_to 'ホーム', home_users_path %></h3>
			</li>
			<li>
				<h3><%= link_to 'クイズ一覧', quizzes_path %></h3>
			</li>
			<li>
				<h3 class="category-show">
					カテゴリ<i class="fas fa-angle-down"></i>
				</h3>
				<div class="category-item">
					<% @categories.each do |category| %>
						<%= link_to category, quizzes_path(category: category) %>
					<% end %>
				</div>
			</li>
			<li>
				<h3><%= link_to '人気クイズ', famous_quizzes_path %></h3>
			</li>
		</ul>

	<% else %>
		<!-- 検索バー -->
		<div class="search-ber mt-5">
			<%= form_tag(search_path, :method => "get") do %>
				<div class="input-group">
					<%= text_field_tag :keyword %>
					<%= button_tag :type => "submit" do %>
						<i class="fa fa-search"></i>
					<% end %>
				</div>
			<% end %>
		</div>

		<!-- サイドバーのメニュー -->
		<ul class="sideber-nuv">
			<li>
				<h3><%= link_to 'クイズ一覧', quizzes_path %></h3>
			</li>
			<li>
				<h3 class="category-show">
					カテゴリ<i class="fas fa-angle-down"></i>
				</h3>
				<div class="category-item">
					<% @categories.each do |category| %>
						<%= link_to category, quizzes_path(category: category) %>
					<% end %>
				</div>
			</li>
			<li>
				<h3><%= link_to '人気クイズ', famous_quizzes_path %></h3>
			</li>
			<li>
				<h3><%= link_to '新規登録', new_user_registration_path %></h3>
			</li>
			<li>
				<h3><%= link_to 'ログイン', new_user_session_path %></h3>
			</li>
		</ul>

	<% end %>

	<!-- クイズ投稿ボタン -->
	<div id="quiz-form-show" class="btn btn-warning">
		<span>クイズを投稿する</span>
	</div>
	<!-- アバウトページへのリンク -->
	<h3 class="about-link"><%= link_to 'Q.flatとは？', '/homes/about' %></h3>
</div>